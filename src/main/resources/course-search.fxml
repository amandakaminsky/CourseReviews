<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.CourseSearchController" style="-fx-background-color: #e8f4f8;">
    <center>
        <ListView fx:id="courseListView" onMouseClicked="#handleCourseSelection"/>
    </center>
    <left>
        <VBox spacing="10" style="-fx-background-color: #e8f4f8; -fx-text-fill: #315d7b;">
            <Label style="-fx-font-weight: bold; -fx-font-size: 15.0;" text="Search Courses">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin></Label>
            <TextField fx:id="searchSubjectTextField" promptText="Subject" />
            <TextField fx:id="searchNumberTextField" promptText="Number" />
            <TextField fx:id="searchTitleTextField" promptText="Title" />
            <HBox spacing="5">
                <Button onAction="#searchCourses" text="Search" style="-fx-background-color: #add8e6;"/>
                <Button onAction="#showCourses" text="Show All Courses" style="-fx-background-color: #add8e6;"/>
            </HBox>

            <Label style="-fx-font-weight: bold; -fx-font-size: 15.0;" text="Add Course" />
            <TextField fx:id="addSubjectTextField" promptText="Subject" />
            <TextField fx:id="addNumberTextField" promptText="Number" />
            <TextField fx:id="addTitleTextField" promptText="Title" />
            <Button onAction="#addCourse" text="Add Course" style="-fx-background-color: #add8e6;"/>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>

        </VBox>
    </left>
    <right>
        <VBox spacing="10" style="-fx-background-color: #e8f4f8; -fx-text-fill: #315d7b;" prefWidth = "180">
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
            <HBox spacing="20">
                <Button onAction="#handleMyReviews" text="My Reviews" style="-fx-background-color: #add8e6;" prefWidth = "150" prefHeight = "35"/>
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
            </HBox>
            <HBox spacing="25">
                <Button onAction="#handleLogOut" text="Log Out" style="-fx-background-color: #add8e6;" prefWidth = "150" prefHeight = "35"/>
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
            </HBox>
        </VBox>
    </right>
</BorderPane>

